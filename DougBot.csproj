<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Azure.AI.OpenAI" Version="1.0.0-beta.5"/>
        <PackageReference Include="ColorHashSharp" Version="1.0.0"/>
        <PackageReference Include="Discord.Net" Version="3.11.0"/>
        <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="7.0.4"/>
        <PackageReference Include="Quartz" Version="3.6.3"/>
        <PackageReference Include="Quartz.Serialization.Json" Version="3.6.3"/>
        <PackageReference Include="TwitchLib" Version="3.5.3"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="Media\*.jpeg">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
        <None Include="Models\EdgeGPTPython.py">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Content Include=".github\workflows\publish.yml"/>
    </ItemGroup>

</Project>
